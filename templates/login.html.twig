{% extends "base.html.twig" %}

{% block title %}Login - TicketFlow{% endblock %}

{% block content %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center px-6">
    <div class="max-w-md w-full">
        <div class="bg-white rounded-2xl shadow-xl p-8 fade-in">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 text-center">Welcome Back</h2>

            <form method="POST" action="index.php?action=login" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input
                        type="email"
                        name="email"
                        value="{{ app.request.post.email|default('') }}"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none"
                        placeholder="you@example.com"
                        required
                    />
                    {% if session.errors.email is defined %}
                        <p class="text-red-500 text-sm mt-1">{{ session.errors.email }}</p>
                    {% endif %}
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input
                        type="password"
                        name="password"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none"
                        placeholder="••••••••"
                        required
                    />
                    {% if session.errors.password is defined %}
                        <p class="text-red-500 text-sm mt-1">{{ session.errors.password }}</p>
                    {% endif %}
                </div>

                <button
                    type="submit"
                    class="w-full px-4 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition font-semibold"
                >
                    Log In
                </button>
            </form>

            <p class="mt-4 text-center text-gray-600">
                Don't have an account?
                <a href="index.php?page=signup" class="text-indigo-600 font-semibold hover:underline">
                    Sign Up
                </a>
            </p>

            <a href="index.php?page=landing" class="mt-4 block w-full text-center text-gray-600 hover:text-gray-900">
                ← Back to Home
            </a>
        </div>
    </div>
</div>

<script>
    // Clear session errors after displaying
    <?php if (isset($_SESSION['errors'])) unset($_SESSION['errors']); ?>
</script>
{% endblock %}